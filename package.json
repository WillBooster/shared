{
  "name": "willbooster-shared",
  "version": "0.0.0-semantically-released",
  "private": true,
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "cleanup": "yarn format && yarn lint-fix",
    "format": "sort-package-json && yarn prettify && yarn workspaces foreach --parallel --verbose run format",
    "postinstall": "husky install",
    "lint": "yarn workspaces foreach --parallel --verbose run lint",
    "lint-fix": "yarn workspaces foreach --parallel --verbose run lint-fix",
    "prettify": "prettier --color --write \"**/{.*/,}*.{cjs,css,htm,html,js,json,json5,jsx,md,mjs,scss,ts,tsx,vue,yaml,yml}\" \"!**/packages/**\" \"!**/test-fixtures/**\"",
    "test": "yarn workspaces foreach --verbose run test",
    "typecheck": "yarn workspaces foreach --parallel --verbose run typecheck"
  },
  "prettier": "@willbooster/prettier-config",
  "devDependencies": {
    "@types/eslint": "8.4.6",
    "@typescript-eslint/parser": "5.35.1",
    "@willbooster/prettier-config": "9.1.0",
    "@willbooster/renovate-config": "9.4.0",
    "eslint": "8.22.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "micromatch": "4.0.5",
    "pinst": "3.0.0",
    "prettier": "2.7.1",
    "sort-package-json": "1.57.0",
    "typescript": "4.8.2"
  },
  "packageManager": "yarn@3.2.3"
}
