{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": [
    "__tests__/**/*",
    "packages/*/__tests__/**/*",
    "packages/*/scripts/**/*",
    "packages/*/src/**/*",
    "scripts/**/*",
    "src/**/*"
  ]
}
