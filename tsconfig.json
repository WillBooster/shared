{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "jsx": "react-jsx",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": [
    "packages/*/scripts/**/*",
    "packages/*/src/**/*",
    "packages/*/tests/**/*",
    "scripts/**/*",
    "src/**/*",
    "tests/**/*"
  ]
}
