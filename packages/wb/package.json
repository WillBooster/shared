{
  "name": "@willbooster/wb",
  "version": "0.0.0-semantically-released",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "type": "module",
  "bin": "bin/index.js",
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "build": "yarn start buildIfNeeded --command 'yarn build-ts app'",
    "cleanup": "yarn format && yarn lint-fix",
    "format": "sort-package-json && yarn prettify",
    "gen-code": "prisma generate",
    "lint": "eslint --color \"./{scripts,src,tests}/**/*.{cjs,cts,js,jsx,mjs,mts,ts,tsx}\"",
    "lint-fix": "yarn lint --fix",
    "prettify": "prettier --cache --color --write \"**/{.*/,}*.{cjs,css,cts,htm,html,js,json,json5,jsonc,jsx,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}\" \"!**/test-fixtures/**\"",
    "start": "build-ts run src/index.ts --",
    "start-prod": "yarn build && yarn wb",
    "test": "WB_ENV=test vitest run tests",
    "typecheck": "tsc --noEmit --Pretty"
  },
  "prettier": "@willbooster/prettier-config",
  "dependencies": {
    "chalk": "5.4.1",
    "dotenv": "16.4.7",
    "globby": "14.1.0",
    "kill-port": "2.0.1",
    "minimal-promise-pool": "4.1.2",
    "tree-kill": "1.2.2",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@rollup/plugin-swc": "0.4.0",
    "@swc/core": "1.11.16",
    "@types/eslint": "8.56.10",
    "@types/kill-port": "2.0.3",
    "@types/micromatch": "4.0.9",
    "@types/node": "22.14.0",
    "@types/yargs": "17.0.33",
    "@typescript-eslint/eslint-plugin": "8.29.0",
    "@typescript-eslint/parser": "8.29.0",
    "@willbooster/eslint-config-ts": "10.6.1",
    "@willbooster/prettier-config": "9.1.3",
    "at-decorators": "4.2.0",
    "build-ts": "13.1.35",
    "eslint": "8.57.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-import-resolver-typescript": "3.10.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-sort-class-members": "1.21.0",
    "eslint-plugin-sort-destructure-keys": "2.0.0",
    "eslint-plugin-unicorn": "56.0.1",
    "lint-staged": "15.5.0",
    "micromatch": "4.0.8",
    "prettier": "3.5.3",
    "prisma": "6.5.0",
    "sort-package-json": "2.15.1",
    "type-fest": "4.39.1",
    "typescript": "5.8.3",
    "vitest": "3.1.1"
  },
  "engines": {
    "node": ">= 18"
  },
  "publishConfig": {
    "access": "public"
  }
}
