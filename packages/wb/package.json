{
  "name": "@willbooster/wb",
  "version": "0.0.0-semantically-released",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "type": "module",
  "bin": "bin/index.js",
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "build": "yarn start buildIfNeeded --command 'yarn build-ts app'",
    "check-for-ai": "yarn install > /dev/null && yarn gen-code > /dev/null && yarn format > /dev/null && yarn lint-fix --quiet && yarn typecheck && yarn test --silent",
    "cleanup": "yarn format && yarn lint-fix",
    "format": "sort-package-json && yarn prettify",
    "gen-code": "prisma generate",
    "lint": "eslint --color",
    "lint-fix": "yarn lint --fix",
    "prettify": "prettier --cache --color --write \"**/{.*/,}*.{cjs,css,cts,htm,html,js,json,json5,jsonc,jsx,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}\" \"!**/test{-,/}fixtures/**\"",
    "start": "build-ts run src/index.ts --",
    "start-prod": "yarn build && yarn wb",
    "test": "WB_ENV=test vitest run tests",
    "typecheck": "tsc --noEmit --Pretty"
  },
  "prettier": "@willbooster/prettier-config",
  "dependencies": {
    "chalk": "5.4.1",
    "dotenv": "16.5.0",
    "globby": "14.1.0",
    "kill-port": "2.0.1",
    "minimal-promise-pool": "5.0.0",
    "tree-kill": "1.2.2",
    "yargs": "18.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-swc": "0.4.0",
    "@swc/core": "1.12.5",
    "@types/eslint": "8.56.10",
    "@types/kill-port": "2.0.3",
    "@types/micromatch": "4.0.9",
    "@types/node": "22.15.32",
    "@types/yargs": "17.0.33",
    "@willbooster/eslint-config-ts": "11.2.2",
    "@willbooster/prettier-config": "10.0.1",
    "at-decorators": "5.0.2",
    "build-ts": "15.0.6",
    "eslint": "9.29.0",
    "eslint-config-flat-gitignore": "2.1.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.4.3",
    "eslint-plugin-import-x": "4.16.0",
    "eslint-plugin-sort-class-members": "1.21.0",
    "eslint-plugin-sort-destructure-keys": "2.0.0",
    "eslint-plugin-unicorn": "59.0.1",
    "eslint-plugin-unused-imports": "4.1.4",
    "globals": "16.2.0",
    "lint-staged": "16.1.2",
    "micromatch": "4.0.8",
    "prettier": "3.6.1",
    "prisma": "6.10.1",
    "sort-package-json": "3.3.1",
    "type-fest": "4.41.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.35.0",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">= 18"
  },
  "publishConfig": {
    "access": "public"
  }
}
